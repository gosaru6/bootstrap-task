<%= form_with(model: @blog, local: true) do |form| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>  
    <tr class="blog_title">
      <td><%= form.label :名前 %></td>
      <td><%= form.text_field :name %></td>
    </tr>
    <tr class="blog_title">
      <td><%= form.label :タイトル %></td>
      <td><%= form.text_field :title %></td>
    </tr>
    <tr class="blog_title">
      <td><%= form.label :内容 %></td>
      <td><%= form.text_area :content %></td>
    </tr>
    <td><%= form.submit :保存 %></td>
  </table>
<% end %>

<%= link_to "ブログ一覧画面にもどる", blogs_path %>